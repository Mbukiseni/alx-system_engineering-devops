!/usr/bin/env bash
# Displays information about file `Bestschool`.

if [ -e "Bestschool" ]
then
  echo "Bestschool file exists"
  if [ -s "Bestschool" ]
  then
    echo "Bestschool file is not empty"
  else
    echo "Bestschool file is empty"
  fi

  if [ -f "Bestschool" ]
  then
    echo "Bestschool is regular file"
  fi
else
  echo "Bestschool file doesn't exist"
fi
